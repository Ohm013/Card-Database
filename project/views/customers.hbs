<h1>Customers</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Delete Entry</th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each customers}}
        <tr>
            <td>{{this.customer_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>

            {{! DELETE form }}
            <form id='delete_customer_form' method='POST' action='/customers/delete'>
                <input type='hidden' name='delete_customer_id' value='{{this.customer_id}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Add a Customer</h2>
<form class='cuForm' id='create_customer_form' method='POST' action='/customers/create'>
    <label for='first_name'>First Name: </label>
    <input type='text' name='first_name' id='first_name' required />

    <label for='last_name'>Last Name: </label>
    <input type='text' name='last_name' id='last_name' required />

    <label for='email'>Email: </label>
    <input type='email' name='email' id='email' required />

    <label for='phone_number'>Phone Number: </label>
    <input type='tel' name='phone_number' id='phone_number' pattern="[0-9]{10}"  placeholder="1234567890" required />

    <input type='submit' value="Add Customer"/>
</form>

{{! UPDATE form }}
<h2>Update a Customer</h2>
<form class='cuForm' id='update_customer_form' method='POST' action='/customers/update'>
    <label for='update_customer_id'>Customer to Update: </label>
    <select name='update_customer_id' id='update_customer_id' required>
        <option value='' disabled selected>Select a Customer</option>
        {{#each customers}}
        <option value='{{this.customer_id}}' required>
            {{this.first_name}}
            -
            {{this.last_name}}
        </option>
        {{/each}}
    </select>

    <label for='update_first_name'>Update First Name: </label>
    <input type='text' name='update_first_name' id='update_first_name' />

    <label for='update_last_name'>Update Last Name: </label>
    <input type='text' name='update_last_name' id='update_last_name' />

    <label for='update_email'>Update Email: </label>
    <input type='email' name='update_email' id='update_email' />

    <label for='update_phone_number'>Update Phone Number: </label>
    <input type='tel' name='update_phone_number' id='update_phone_number' pattern="[0-9]{10}"  placeholder="1234567890" />

    <input type='submit' value="Update Customer" />
</form>